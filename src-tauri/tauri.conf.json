{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "markdv",
  "version": "../package.json",
  "identifier": "dev.funlab.markdv",
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../out"
  },
  "app": {
    "windows": [
      {
        "title": "MarkdV",
        "minWidth": 320,
        "minHeight": 160,
        "width": 800,
        "height": 600,
        "backgroundColor": "#000"
      },
      {
        "label": "editor",
        "title": "MarkdV - editor",
        "minWidth": 320,
        "minHeight": 160,
        "width": 800,
        "height": 600,
        "backgroundColor": "#000",
        "url": "/edit",
        "parent": "main",
        "create": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
  },
  "plugins": {
    "cli": {
      "args": [
        {
          "name": "source",
          "index": 1,
          "takesValue": true
        }
      ]
    }
  }
}
